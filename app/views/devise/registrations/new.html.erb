<%= form_with model: @user, url: '/users', class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-wrapper'>
      <h2>beyond</h2>
      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
      <form>
        <div class="form-item">
          <label for="nickname"></label>
          <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"ニックネーム" %>
        </div>
        <div class="form-item">
          <label for="email"></label>
          <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", autofocus: true %>
        </div>
        <%if @sns_id.present? %>
          <%= hidden_field_tag :sns_auth, true %>
        <% else %>
          <div class="form-item">
            <label for="password"></label>
            <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワード" %>
          </div>
          <div class="form-item">
            <label for="password_confirmation"></label>
            <%= f.password_field :password_confirmation, class:"input-default", id:"password", placeholder:"パスワード（確認用）" %>
          </div>
        <% end %>
        <div class="button-panel">
          <%= f.submit "アカウント登録" ,class:"button",title:"Sign Up" %>
        </div>
        <div class="sns-auth-panel">
          <button class="fb-button"><i class="fab fa-facebook-square"></i> <%= link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, method: :post, class:"btn-text" %></button>
          <button class="gg-button"><i class="fab fa-google"></i> <%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post, class:"btn-text" %></button>
        </div>
      </form>
    </div>
  </div>
<% end %>