<%# CSS・・・assets/stylesheets/css/shared/header.css %>
<header>
  <div class="top-page-contents">
    <div class='contents-left'>
      <% if user_signed_in? %>
        <%= link_to image_tag("logo_transparent.png", class:"beyond-icon"), posts_path %>
      <% else %>
        <%= link_to image_tag("logo_transparent.png", class:"beyond-icon"), root_path %>
      <% end %>
    </div>
    <div class='contents-right'>
      <ul class='lists'>
        <% if user_signed_in? %>
          <li><i class="fas fa-cog"></i><%= link_to 'マイページ', user_path(current_user.id), class: "user-nickname" %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
        <% else %>
          <li><%= link_to 'ゲストログイン(閲覧用)', homes_guest_sign_in_path, method: :post, class: "login" %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
          <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>